{
  "system_id": "landing_gear_retraction_system",
  "system_name": "Landing Gear Retraction System",
  "specification": {
    "designScenario": {
      "name": "Landing Gear Retraction System",
      "description": "Design a robust and fail-safe Landing Gear Retraction System for an aircraft, incorporating deployment and retraction mechanisms, shock absorption, brake and steering integration, hydraulic actuation, and sensor-based monitoring. The system must handle high-load conditions and ensure safety in normal and emergency operations.",
      "requirements": [
        {
          "title": "Gear Deployment and Shock Absorption",
          "type": "functional",
          "details": [
            {
              "description": "The landing gear must extend and retract reliably on command for takeoff and landing."
            },
            {
              "description": "The system must include shock absorption mechanisms to dissipate impact energy during landing."
            }
          ]
        },
        {
          "title": "Performance Timing",
          "type": "performance",
          "details": [
            {
              "description": "Deployment and retraction must complete in under 3 seconds under normal conditions."
            },
            {
              "description": "Hydraulic actuators must achieve full extension within specified time limits even in low-temperature environments."
            }
          ]
        },
        {
          "title": "Safety Redundancy and Failsafe",
          "type": "safety",
          "details": [
            {
              "description": "Redundant actuation mechanisms must enable emergency gear extension in case of hydraulic/electrical failure."
            },
            {
              "description": "Failsafe locks must engage automatically if gear position anomalies are detected."
            }
          ]
        },
        {
          "title": "Maintainability and Compliance",
          "type": "nonFunctional",
          "details": [
            {
              "description": "Components must allow easy inspection, maintenance, and replacement with minimal downtime."
            },
            {
              "description": "All components must comply with aviation environmental and durability standards (e.g., FAA/EASA regulations)."
            }
          ]
        }
      ]
    },
