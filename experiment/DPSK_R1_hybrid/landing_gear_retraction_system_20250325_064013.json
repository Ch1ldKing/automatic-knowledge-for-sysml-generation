{
  "system_id": "landing_gear_retraction_system",
  "system_name": "Landing Gear Retraction System",
  "specification": {
    "designScenario": {
      "name": "Landing Gear Retraction System",
      "description": "Design a fail-safe retraction mechanism integrated with the aircraft's Landing Gear System, ensuring rapid and reliable gear stowage post-takeoff. The system must synchronize hydraulic actuation, mechanical locking, and sensor feedback while maintaining aerodynamic efficiency, structural integrity, and redundancy under varying operational conditions.",
      "requirements": [
        {
          "title": "Retraction Sequencing",
          "type": "functional",
          "details": [
            {
              "description": "The system must retract all landing gear assemblies simultaneously with precise synchronization to prevent asymmetric aerodynamic loads."
            },
            {
              "description": "Mechanical locks must engage automatically upon full retraction to secure gear in the stowed position."
            }
          ]
        },
        {
          "title": "Retraction Speed and Power",
          "type": "performance",
          "details": [
            {
              "description": "Full retraction cycle must complete within 3 seconds at -40°C to +60°C operational temperature range."
            },
            {
              "description": "Hydraulic actuators must generate ≥15,000 lbf linear force to overcome aerodynamic resistance during retraction."
            }
          ]
        },
        {
          "title": "Redundant Retraction Paths",
          "type": "safety",
          "details": [
            {
              "description": "Backup mechanical release mechanism must deploy if primary hydraulic retraction fails."
            },
            {
              "description": "Dual-channel position sensors must cross-validate gear stowage status before cockpit indication."
            }
          ]
        },
        {
          "title": "Maintenance Accessibility",
          "type": "nonFunctional",
          "details": [
            {
              "description": "Retraction actuators must allow seal replacement without full system depressurization."
            },
            {
              "description": "All components must meet DO-160G standards for environmental resistance."
            }
          ]
        }
      ]
    },
    "systemComponents": [
      {
        "name": "Retraction Actuator Assembly",
        "description": "Hydraulic linear actuators providing force to stow landing gear into wheel wells, including position feedback mechanisms.",
        "type": "Electro-Hydraulic Subsystem",
        "subComponents": [
          {
            "name": "Primary Linear Actuator",
            "description": "Dual-piston hydraulic cylinder generating retraction force",
            "type": "Force Generator"
          },
          {
            "name": "Actuator Position Transducer",
            "description": "LVDT sensor providing real-time actuator extension percentage",
            "type": "Position Sensor"
          }
        ]
      },
      {
        "name": "Gear Door Mechanism",
        "description": "Aerodynamic fairing system with sequenced opening/closing linked to gear movement",
        "type": "Mechanical Assembly",
        "subComponents": [
          {
            "name": "Door Actuator",
            "description": "Rotary hydraulic actuator controlling door kinematics",
            "type": "Motion Controller"
          },
          {
            "name": "Door Seal",
            "description": "Pressure-resistant seal maintaining cabin integrity when doors closed",
            "type": "Environmental Barrier"
          }
        ]
      },
      {
        "name": "Up-Lock Assembly",
        "description": "Positive mechanical locking system to secure retracted gear",
        "type": "Safety Mechanism",
        "subComponents": [
          {
            "name": "Hook Latch",
            "description": "Titanium forged hook engaging with gear strut lugs",
            "type": "Load-Bearing Component"
          },
          {
            "name": "Lock Sensor",
            "description": "Microswitch confirming positive lock engagement",
            "type": "Binary Sensor"
          }
        ]
      },
      {
        "name": "Retraction Control Module",
        "description": "Dual-redundant electronic controller managing retraction sequencing",
        "type": "Avionics Unit",
        "subComponents": [
          {
            "name": "Sequence Processor",
            "description": "FPGA-based timing controller for door/gear synchronization",
            "type": "Digital Controller"
          },
          {
            "name": "Power Relay Panel",
            "description": "High-current relays distributing power to hydraulic valves",
            "type": "Electrical Distribution"
          }
        ]
      }
    ],
