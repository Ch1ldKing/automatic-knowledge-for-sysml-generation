{
  "system_id": "hf_communication_system",
  "system_name": "HF Communication System",
  "specification": {
    "designScenario": {
      "name": "HF Communication System",
      "description": "Design an advanced HF Communication System engineered for secure, reliable, and robust long-range voice and data transmission in hazardous environments. The system integrates HF radio technology with modern avionics standards, ensuring electromagnetic compatibility and interference rejection. It serves as the primary communication backbone for air, land, and maritime platforms, prioritizing mission-critical data integrity and redundancy.",
      "requirements": [
        {
          "title": "Multi-Modal Communication",
          "type": "functional",
          "details": [
            {
              "description": "The system shall support HF voice communication, telex, and data transmission (e.g., weather, navigation, and tactical data) analogous to aircraft HF radio systems."
            },
            {
              "description": "Enable interoperability with legacy HF systems and modern digital modes (e.g., SSB, VHF, and digital HF modems)."
            }
          ]
        },
        {
          "title": "Performance Metrics",
          "type": "performance",
          "details": [
            {
              "description": "Achieve reliable communication within the HF spectrum (3–30 MHz) with latency under 500 milliseconds for voice and 2 seconds for data bursts."
            },
            {
              "description": "Ensure data throughput of 12–24 kbps for digital HF modes, maintaining performance in ionospheric noise and multipath interference."
            }
          ]
        },
        {
          "title": "Safety and Security Requirements",
          "type": "safety",
          "details": [
            {
              "description": "Implement AES-256 encryption for data and scrambler-based voice security to prevent eavesdropping, mirroring military-grade HF communication protocols."
            },
            {
              "description": "Provide automatic frequency hopping and redundancy via multiple transceivers to ensure uninterrupted communication during solar flare-induced blackouts."
            }
          ]
        },
        {
          "title": "Non Functional Requirements",
          "type": "nonFunctional",
          "details": [
            {
              "description": "User interface must display frequency status, signal strength, and encryption status on a cockpit-style monitor, with tactile controls for emergency overrides."
            },
            {
              "description": "Support over-the-air firmware updates for HF modem parameters and encryption keys via a secure, low-bandwidth channel."
            }
          ]
        }
      ]
    },
    "systemComponents": [
      {
        "name": "Control Unit",
        "type": "Electronic Module",
        "description": "Central processor managing HF communication protocols, frequency allocation, and system diagnostics, analogous to an aircraft's mission computer.",
        "subComponents": null
      },
      {
        "name": "HF Transceiver Module",
        "type": "Communication Module",
        "description": "Handles HF signal modulation/demodulation (SSB, AM, FM), frequency tuning, and power amplification for long-range transmission.",
        "subComponents": [
          {
            "name": "HF Modulator",
            "type": "Actuator",
            "description": "Converts digital data to analog HF signals using SSB or digital HF modem techniques."
          },
          {
            "name": "Power Amplifier",
            "type": "Amplifier",
            "description": "Boosts signal strength for HF transmission up to 1 kW output, ensuring global range."
          }
        ]
      },
      {
        "name": "Antenna Array",
        "type": "Hardware Module",
        "description": "Directional and omnidirectional antennas for HF reception/transmission, mitigating ionospheric noise and jamming.",
        "subComponents": [
          {
            "name": "Vertical Antenna",
            "type": "Antenna",
            "description": "Primary antenna for omnidirectional HF coverage."
          },
          {
            "name": "Loop Antenna",
            "type": "Antenna",
            "description": "Directional antenna for reducing interference and improving signal directionality."
          }
        ]
      },
      {
        "name": "Signal Processor",
        "type": "Processing Module",
        "description": "Filters HF noise, corrects signal distortion, and prepares data for encryption.",
        "subComponents": [
          {
            "name": "Noise Filter",
            "type": "Filter",
            "description": "Removes atmospheric and man-made noise from received HF signals."
          },
          {
            "name": "Digital Signal Converter",
            "type": "Processor",
            "description": "Converts analog HF signals to digital for processing and encryption."
          }
        ]
      },
      {
        "name": "Encryption Module",
        "type": "Security Module",
        "description": "Secures HF transmissions via AES-256 for data and scrambler-based voice encryption.",
        "subComponents": [
          {
            "name": "AES-256 Encryptor",
            "type": "Encryption Unit",
            "description": "Encrypts digital HF data streams using AES-256."
          },
          {
            "name": "Voice Scrambler",
            "type": "Encryption Unit",
            "description": "Applies frequency inversion and phase shift for secure voice communication."
          }
        ]
      },
      {
        "name": "Power Supply",
        "type": "Subsystem",
        "description": "Redundant power supply ensuring uninterrupted operation during primary power loss.",
        "subComponents": [
          {
            "name": "DC Power Converter",
            "type": "Power Unit",
            "description": "Converts aircraft DC power to regulated voltage for HF subsystems."
          },
          {
            "name": "Emergency Battery",
            "type": "Power Unit",
            "description": "Backup battery providing 2 hours of operation during power failure."
          }
        ]
      }
    ],
    "relationships": [
