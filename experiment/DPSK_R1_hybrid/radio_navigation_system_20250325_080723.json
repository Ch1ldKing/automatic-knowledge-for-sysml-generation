{
  "system_id": "radio_navigation_system",
  "system_name": "Radio Navigation System",
  "specification": {
    "designScenario": {
      "name": "Radio Navigation System",
      "description": "A specialized navigation system utilizing radio signals from ground-based navigation aids (e.g., VOR, ILS, NDB) and satellite systems to determine aircraft position, enable course guidance, and support approach procedures. Integrates multiple radio navigation sources with avionics for lateral and vertical path adherence in all flight phases.",
      "requirements": [
        {
          "title": "Radio Signal Processing",
          "type": "functional",
          "details": [
            {
              "description": "The system shall automatically tune and decode VOR, ILS, DME, and ADF signals for navigation reference."
            },
            {
              "description": "Provide bearing/distance calculations relative to ground-based navigation aids with error compensation for magnetic variation."
            }
          ]
        },
        {
          "title": "Navigation Performance",
          "type": "performance",
          "details": [
            {
              "description": "Maintain VOR radial tracking accuracy within ±1.5° under normal signal conditions."
            },
            {
              "description": "Process ILS localizer and glidepath signals with ≤0.25° deviation sensitivity during CAT I approaches."
            }
          ]
        },
        {
          "title": "Signal Integrity Assurance",
          "type": "safety",
          "details": [
            {
              "description": "Implement dual-channel cross-verification for critical approach signals (ILS/DME) with automatic failover."
            },
            {
              "description": "Trigger cockpit alerts when navigation signal quality falls below ICAO Annex 10 minimums."
            }
          ]
        },
        {
          "title": "Operational Compatibility",
          "type": "nonFunctional",
          "details": [
            {
              "description": "Support ARINC 429/708 data interfaces for integration with legacy and modern avionics suites."
            },
            {
              "description": "Design antennas and receivers to meet DO-160G environmental standards for EMI/lightning protection."
            }
          ]
        }
      ]
    },
    "systemComponents": [
      {
        "name": "VOR Receiver",
        "description": "Very High Frequency Omnidirectional Range receiver for azimuth determination relative to ground stations",
        "type": "Radio Navigation Sensor",
        "subComponents": [
          {
            "name": "VOR Tuner",
            "description": "Frequency-selective unit for station selection (108-117.95 MHz)",
            "type": "RF Component"
          },
          {
            "name": "Phase Comparator",
            "description": "Calculates phase difference between reference and variable signals for bearing resolution",
            "type": "Processing Unit"
          }
        ]
      },
      {
        "name": "ILS Receiver",
        "description": "Instrument Landing System receiver for precision approach guidance",
        "type": "Approach Sensor",
        "subComponents": [
          {
            "name": "Localizer Receiver",
            "description": "Processes 108-112 MHz signals for lateral guidance",
            "type": "RF Component"
          },
          {
            "name": "Glidepath Receiver",
            "description": "Processes UHF (329.3-335 MHz) signals for vertical approach path",
            "type": "RF Component"
          }
        ]
      },
      {
        "name": "DME Transponder",
        "description": "Distance Measuring Equipment for slant-range calculation to ground stations",
        "type": "Ranging Sensor",
        "subComponents": [
          {
            "name": "Pulse Generator",
            "description": "Produces X-band (962-1213 MHz) interrogation pulses",
            "type": "RF Component"
          },
          {
            "name": "Time Interval Counter",
            "description": "Measures round-trip signal delay for distance calculation",
            "type": "Processing Unit"
          }
        ]
      },
      {
        "name": "Radio Navigation Computer",
        "description": "Central processor integrating multiple radio navigation inputs with flight management data",
        "type": "Avionics Computer",
        "subComponents": [
          {
            "name": "Signal Fusion Module",
            "description": "Kalman filter-based integration of VOR/ILS/DME data with inertial references",
            "type": "Processing Unit"
          },
          {
            "name": "Fault Detection Unit",
            "description": "Continuous monitoring of signal validity and equipment health",
            "type": "Monitoring Module"
          }
        ]
      },
      {
        "name": "Antenna Array",
        "description": "Aircraft-mounted antennas for radio signal reception",
        "type": "RF Subsystem",
        "subComponents": [
          {
            "name": "VOR/ILS Blade Antenna",
            "description": "Vertically polarized antenna for VHF navigation signals",
            "type": "Antenna"
          },
          {
            "name": "DME Dipole Antenna",
            "description": "Tuned for UHF ranging signals",
            "type": "Antenna"
          }
        ]
      }
    ],
    "relationships": [
      {
        "source": "Radio Navigation Computer",
        "target": "VOR Receiver",
        "relationshipType": "aggregation",
        "description": "Navigation computer aggregates bearing data from multiple VOR receivers for position triangulation"
      },
      {
        "source": "Radio Navigation Computer",
        "target": "ILS Receiver",
        "relationshipType": "composition",
        "description": "ILS receiver is an integral component managed directly by the navigation computer during approaches"
      },
      {
        "source": "DME Transponder",
        "target": "Radio Navigation Computer",
        "relationshipType": "association",
        "description": "DME distance data is transmitted to the navigation computer for position updating"
      },
      {
        "source": "Antenna Array",
        "target": "VOR Receiver",
        "relationshipType": "dependency",
        "description": "VOR receiver depends on antenna array for signal reception quality"
      },
      {
        "source": "Radio Navigation Computer",
        "target": "Navigation Database",
        "relationshipType": "dependency",
        "description": "Requires updated navigation database for station frequencies/positions"
      }
    ],
    "attributes": [
      {
        "name": "frequencyRange",
        "type": "string",
        "value": "VOR: 108-117.95 MHz; ILS: 108-112 MHz (Localizer), 329.3-335 MHz (Glidepath)",
