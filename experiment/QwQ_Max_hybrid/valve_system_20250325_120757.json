{
  "system_id": "valve_system",
  "system_name": "Valve System",
  "specification": {
    "designScenario": {
      "name": "Valve System",
      "description": "The Valve System is designed to manage the precise routing of hydraulic fluid between the hydraulic pump and flight control components such as control surfaces, landing gear, and brakes. It ensures rapid, accurate actuation with fail-safe mechanisms, and integrates sensors and diagnostics for reliability in extreme operational conditions.",
      "requirements": [
        {
          "title": "Flow Routing Functionality",
          "type": "functional",
          "details": [
            {
              "description": "The valves shall accurately direct the hydraulic fluid between the hydraulic pump and the corresponding actuators to ensure controlled motion of flight surfaces."
            }
          ]
        },
        {
          "title": "Rapid Response",
          "type": "performance",
          "details": [
            {
              "description": "The valves shall exhibit a response time of less than 0.5 seconds to meet the rapid actuation demands during critical flight maneuvers."
            }
          ]
        },
        {
          "title": "Fail-Safe Operation",
          "type": "safety",
          "details": [
            {
              "description": "A fail-safe mechanism must be incorporated into the valve design such that in the event of a malfunction, hydraulic fluid is safely rerouted to prevent loss of control."
            }
          ]
        },
        {
          "title": "Durability and Diagnostics",
          "type": "nonFunctional",
          "details": [
            {
              "description": "The valve system shall be designed for enhanced durability with low maintenance requirements and self-diagnostic capabilities to detect performance anomalies or fluid contamination."
            }
          ]
        }
      ]
    },
    "systemComponents": [
      {
        "name": "Directional Control Valves",
        "type": "Control Unit",
        "description": "The core component responsible for managing hydraulic fluid routing with precision control. This unit integrates both automated and manual control mechanisms to adapt to variable flight conditions.",
        "subComponents": [
          {
            "name": "Solenoid Valves",
            "type": "Electromechanical Valve",
            "description": "Electromechanically actuated solenoid valves that provide rapid switching of hydraulic fluid paths in response to control commands."
          },
          {
            "name": "Manual Override Valves",
            "type": "Mechanical Valve",
            "description": "Manually adjustable valves that allow fine-tuning of fluid distribution during maintenance or emergency operations."
          }
        ]
      },
      {
        "name": "Hydraulic Pump",
        "type": "Hydraulic Component",
        "description": "Provides pressurized hydraulic fluid to the valve system, ensuring adequate flow and pressure for actuation requirements.",
        "subComponents": null
      },
      {
        "name": "Actuators",
        "type": "Actuation Mechanism",
        "description": "Hydraulic actuators responsible for moving flight control surfaces, landing gear, and braking systems in response to fluid pressure changes.",
        "subComponents": null
      },
      {
        "name": "Sensors",
        "type": "Monitoring Sensors",
        "description": "Integrated sensors monitor pressure, flow rate, and fluid quality, providing real-time data to the Central Monitoring Unit.",
        "subComponents": null
      },
      {
        "name": "Central Monitoring Unit",
        "type": "Control System",
        "description": "Centralized unit that receives sensor data, performs diagnostics, and oversees valve actuation commands to ensure system reliability and safety.",
        "subComponents": null
      }
    ],
    "relationships": [
      {
        "source": "Directional Control Valves",
        "target": "Hydraulic Pump",
        "relationshipType": "association",
        "description": "Directional Control Valves regulate the flow of hydraulic fluid originating from the Hydraulic Pump to ensure proper actuation of flight control components."
      },
      {
        "source": "Directional Control Valves",
        "target": "Actuators",
        "relationshipType": "association",
        "description": "Directional Control Valves ensure proper hydraulic fluid routing to Actuators, enabling precise control of flight surfaces, landing gear, and brakes."
      },
      {
        "source": "Sensors",
        "target": "Directional Control Valves",
        "relationshipType": "aggregation",
        "description": "Sensors are integrated within the Directional Control Valves to monitor pressure and flow characteristics, providing critical data for system operation."
      },
      {
        "source": "Sensors",
        "target": "Central Monitoring Unit",
        "relationshipType": "association",
        "description": "Sensors transmit real-time data on hydraulic conditions to the Central Monitoring Unit for diagnostics and system oversight."
      },
      {
        "source": "Central Monitoring Unit",
        "target": "Directional Control Valves",
        "relationshipType": "association",
        "description": "The Central Monitoring Unit sends actuation commands to the Directional Control Valves based on sensor feedback and flight control inputs."
      }
    ],
    "attributes": [
