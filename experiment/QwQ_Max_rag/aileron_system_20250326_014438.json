        "description": "Electrically powered mechanism driving aileron deflection.",
        "subComponents": [
          {
            "name": "Electric Motor",
            "type": "Brushless DC Motor",
            "description": "High-torque motor with 20,000 RPM capability for rapid actuation."
          },
          {
            "name": "Position Sensor",
            "type": "Hall-Effect Sensor",
            "description": "Non-contact sensor providing 0.1° resolution deflection feedback."
          }
        ]
      },
      {
        "name": "Sensing Subsystem",
        "type": "Sensing Subsystem",
        "description": "Monitors aerodynamic loads and deflection position.",
        "subComponents": [
          {
            "name": "Load Sensor",
            "type": "Strain Gauge",
            "description": "Measures bending moments up to 5000 Nm with ±1% accuracy."
          },
          {
            "name": "Limit Switch",
            "type": "Mechanical Limit",
            "description": "Physical stop with microswitch triggering at ±30° deflection."
          }
        ]
      }
    ],
