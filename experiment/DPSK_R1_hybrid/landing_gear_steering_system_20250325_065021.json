{
  "system_id": "landing_gear_steering_system",
  "system_name": "Landing Gear Steering System",
  "specification": {
    "designScenario": {
      "name": "Landing Gear Steering System",
      "description": "A critical system providing directional control of the aircraft's nose gear during ground operations, including taxi, takeoff, and landing. It integrates electromechanical actuation, hydraulic power (if applicable), and closed-loop control to ensure precise steering response, redundancy, and compliance with aviation safety standards. Designed to operate under extreme environmental conditions and mechanical stresses while maintaining fail-safe behavior.",
      "requirements": [
        {
          "title": "Precise Nose Gear Control",
          "type": "functional",
          "details": [
            {
              "description": "The system must convert pilot/autopilot steering commands into accurate nose gear angular displacement (±60° minimum) via electrical/hydraulic signals."
            },
            {
              "description": "Provide dual redundant control signal paths to ensure operational continuity during single-channel failures."
            }
          ]
        },
        {
          "title": "High Dynamic Response",
          "type": "performance",
          "details": [
            {
              "description": "Achieve full deflection from center to maximum steering angle (60°) in ≤ 0.4 seconds under 500 Nm load."
            }
          ]
        },
        {
          "title": "Fail-Safe Operation",
          "type": "safety",
          "details": [
            {
              "description": "Incorporate mechanical centering springs and hydraulic pressure relief valves to return nose gear to neutral position during power loss."
            },
            {
              "description": "Implement torque-limiting couplings to prevent structural overloads during ground collisions."
            }
          ]
        },
        {
          "title": "Environmental Resilience",
          "type": "nonFunctional",
          "details": [
            {
              "description": "Operate reliably in temperatures from -55°C to +85°C with 95% relative humidity and resistance to de-icing fluids."
            },
            {
              "description": "Meet DO-160G standards for vibration, shock, and electromagnetic interference."
            }
          ]
        }
      ]
    },
    "systemComponents": [
      {
        "name": "Steering Control Unit (SCU)",
        "description": "Primary electronic controller processing pilot inputs, autopilot commands, and feedback signals to generate actuator control signals.",
        "type": "Avionics Module",
        "subComponents": [
          {
            "name": "Command Processor",
            "description": "FPGA-based module executing steering algorithms and redundancy management.",
            "type": "Electronic Hardware"
          },
          {
            "name": "Signal Conditioning Unit",
            "description": "Isolates and amplifies control signals to mitigate EMI effects.",
            "type": "Electronic Interface"
          }
        ]
      },
      {
        "name": "Electro-Hydraulic Servo Actuator",
        "description": "Converts electrical commands from SCU into hydraulic pressure to drive steering mechanism.",
        "type": "Actuator Assembly",
        "subComponents": [
          {
            "name": "Solenoid Valves",
            "description": "Direct hydraulic fluid flow based on SCU commands.",
            "type": "Hydraulic Component"
          },
          {
            "name": "Torque Motor",
            "description": "Generates proportional force to position servo valve spools.",
            "type": "Electromechanical Device"
          }
        ]
      },
      {
        "name": "Steering Feedback Sensor",
        "description": "LVDT/RVDT-based sensor measuring actual nose gear position for closed-loop control.",
        "type": "Sensor",
        "subComponents": [
          {
            "name": "Signal Transmitter",
            "description": "Converts angular displacement into analog/digital signals.",
            "type": "Electronic Module"
          }
        ]
      },
      {
        "name": "Hydraulic Power Pack",
        "description": "Provides regulated hydraulic pressure (3000 psi) to servo actuators.",
        "type": "Hydraulic System",
        "subComponents": [
          {
            "name": "Priority Valve",
            "description": "Ensures steering system receives priority flow during low-pressure conditions.",
            "type": "Hydraulic Valve"
          }
        ]
      }
    ],
    "relationships": [
      {
        "source": "Steering Control Unit (SCU)",
        "target": "Electro-Hydraulic Servo Actuator",
        "relationshipType": "association",
        "description": "SCU transmits validated steering commands to the actuator's torque motor via ARINC 429 data buses."
      },
      {
        "source": "Electro-Hydraulic Servo Actuator",
        "target": "Hydraulic Power Pack",
        "relationshipType": "dependency",
        "description": "Actuator requires continuous hydraulic pressure from the power pack to generate steering torque."
      },
      {
        "source": "Steering Feedback Sensor",
        "target": "Steering Control Unit (SCU)",
        "relationshipType": "association",
        "description": "Feedback sensor provides real-time nose gear position data to SCU for closed-loop control."
      },
      {
        "source": "Hydraulic Power Pack",
        "target": "Priority Valve",
        "relationshipType": "composition",
        "description": "Priority valve is an integral subcomponent ensuring hydraulic supply prioritization."
      }
    ],
    "attributes": [
      {
