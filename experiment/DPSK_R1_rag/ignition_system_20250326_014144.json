{
  "system_id": "ignition_system",
  "system_name": "Ignition System",
  "specification": {
    "designScenario": {
      "name": "Ignition System",
      "description": "The Ignition System is responsible for initiating and sustaining combustion in the aircraft engine under all operational conditions. It interfaces with the Engine Control Computer to receive timing and sequencing commands, ensures reliable spark generation across multiple igniter units, and monitors flame stability. Designed for redundancy and fault tolerance, it operates in extreme environmental conditions while maintaining synchronization with engine rotational speed, fuel flow, and altitude parameters.",
      "requirements": [
        {
          "title": "Spark Generation and Timing Control",
          "type": "functional",
          "details": [
            {
              "description": "Generate high-energy sparks across igniter units with precise timing synchronized to engine RPM and compressor stages."
            },
            {
              "description": "Automatically adjust ignition frequency and duration based on inputs from the Engine Control Computer during start-up, climb, and relight scenarios."
            }
          ]
        },
        {
          "title": "Redundancy and Fault Isolation",
          "type": "safety",
          "details": [
            {
              "description": "Maintain dual independent ignition channels with cross-channel monitoring to ensure continuous operation during single-channel failures."
            },
            {
              "description": "Implement arc fault detection and automatic deactivation of faulty igniter circuits to prevent system-wide failures."
            }
          ]
        },
        {
          "title": "High-Altitude Performance",
          "type": "performance",
          "details": [
            {
              "description": "Deliver spark energies ≥ 4 joules per ignition event to ensure reliable combustion at altitudes above 40,000 feet."
            },
            {
              "description": "Maintain ignition timing accuracy within ±0.5 milliseconds across -40°C to +200°C operational temperature ranges."
            }
          ]
        },
        {
          "title": "Maintenance Diagnostics",
          "type": "nonFunctional",
          "details": [
            {
              "description": "Provide capacitive discharge counters and spark energy degradation metrics through the aircraft's central maintenance system."
            },
            {
              "description": "Support on-wing testing of ignition exciters without engine rotation via built-in test equipment (BITE)."
            }
          ]
        }
      ]
    },
    "systemComponents": [
      {
        "name": "Ignition Control Unit",
        "description": "Primary controller managing spark timing, energy output, and health monitoring of ignition channels.",
        "type": "Electronic Ignition Controller",
        "subComponents": [
          {
            "name": "Spark Timing Controller",
            "description": "FPGA-based module processing engine position signals and calculating ignition advance angles.",
            "type": "Timing Processor"
          },
          {
            "name": "Redundant Controller Module",
            "description": "Backup control path with independent power supply and signal processing chain.",
            "type": "Failover Controller"
          }
        ]
      },
      {
        "name": "High-Energy Igniter Units",
        "description": "Capacitive discharge-based spark generators mounted on engine combustor casing.",
        "type": "Ignition Exciters",
        "subComponents": [
          {
            "name": "Pulse Transformer",
            "description": "Steps up input voltage to 20kV range for spark generation.",
            "type": "Voltage Amplifier"
          },
          {
            "name": "Semiconductor Switching Stack",
            "description": "Thyristor-based array controlling discharge timing and energy.",
            "type": "Power Electronics"
          }
        ]
      },
      {
        "name": "Flame Detection Sensors",
        "description": "UV/IR-based sensors monitoring combustion stability in the turbine section.",
        "type": "Optical Sensors",
        "subComponents": [
          {
            "name": "Photodiode Array",
            "description": "Multi-spectral sensor array detecting flame signature wavelengths.",
            "type": "Optical Receiver"
          },
          {
            "name": "Signal Processor",
            "description": "Filters and amplifies raw sensor data for flame presence determination.",
            "type": "Signal Conditioning Module"
          }
        ]
      },
      {
        "name": "Ignition Power Supply",
        "description": "Dual-redundant 28VDC-to-400VDC converters for exciter capacitor charging.",
        "type": "Power Conversion Unit",
        "subComponents": [
          {
            "name": "High-Voltage Capacitor Bank",
            "description": "Energy storage system for spark discharge events.",
            "type": "Energy Storage"
          },
          {
            "name": "Voltage Regulation Circuit",
            "description": "Maintains stable charging voltage across temperature variations.",
            "type": "Power Management"
          }
        ]
      }
    ],
    "relationships": [
      {
